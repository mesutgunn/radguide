generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  TEKNIKER
  RAPORTOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          UserRole  @default(TEKNIKER)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  protocols     Protocol[]
  analysisJobs  AnalysisJob[]
  reportRecords ReportRecord[]
  logs          LogEntry[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Protocol Models
enum Modality {
  XR
  MR
  CT
  US
  NM
}

model Protocol {
  id           String    @id @default(cuid())
  modality     Modality
  title        String
  bodyMarkdown String
  tags         String
  isPublished  Boolean   @default(false)
  createdBy    String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  creator      User          @relation(fields: [createdBy], references: [id])
  analysisJobs AnalysisJob[]

  @@index([modality])
  @@index([isPublished])
}

// Analysis Models
enum AnalysisStatus {
  queued
  processing
  done
  error
}

enum AnalysisResult {
  SUCCESS
  FAILED
}

model AnalysisJob {
  id         String          @id @default(cuid())
  userId     String
  modality   Modality
  protocolId String?
  imageUrl   String
  status     AnalysisStatus  @default(queued)
  result     AnalysisResult?
  outputJson Json?
  score      Float?
  feedback   String?
  errorMsg   String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  protocol Protocol? @relation(fields: [protocolId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([protocolId])
}

// Report Models
model ReportTemplate {
  id           String   @id @default(cuid())
  modality     Modality
  title        String
  sectionsJson Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([modality])
}

model ReportRecord {
  id              String   @id @default(cuid())
  userId          String
  modality        Modality
  audioUrl        String?
  transcript      String?
  reportText      String?
  validationScore Float?
  validationJson  Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([modality])
}

// Site Settings
model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  valueJson Json
  updatedAt DateTime @updatedAt
}

// Webhook Models
model WebhookConfig {
  id            String   @id @default(cuid())
  name          String
  targetUrl     String
  events        String
  isActive      Boolean  @default(true)
  signingSecret String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isActive])
}

// Logging Models
enum LogScope {
  analysis
  reporter
  admin
  auth
  webhook
}

enum LogLevel {
  info
  warn
  error
}

model LogEntry {
  id          String    @id @default(cuid())
  userId      String?
  actorRole   UserRole?
  scope       LogScope
  action      String
  payloadJson Json?
  level       LogLevel  @default(info)
  createdAt   DateTime  @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([scope])
  @@index([level])
  @@index([createdAt])
}
