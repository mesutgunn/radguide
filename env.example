# Database (SQLite for development)
DATABASE_URL="file:./dev.db"
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:pass@localhost:5432/radguide

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Email (Optional)
EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=noreply@radguide.com

# Storage (S3 Compatible)
STORAGE_BUCKET=radguide-uploads
STORAGE_REGION=us-east-1
STORAGE_KEY=your-access-key
STORAGE_SECRET=your-secret-key
STORAGE_ENDPOINT=https://s3.amazonaws.com

# Speech-to-Text
SPEECH_PROVIDER=mock
SPEECH_API_KEY=your-api-key-here

# Webhook
WEBHOOK_SIGNING_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=info
